{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "graphql-types": ["./src/graphql-types"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
